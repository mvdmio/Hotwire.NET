<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="CopyTailwindContent" BeforeTargets="CoreCompile" Condition="'$(HotwireCopyDefaultFiles)' == 'true'">
        <PropertyGroup>
            <ShouldCopyTurbo>!Exists('$(HotwireCopyBaseDirectory)\turbo.js')</ShouldCopyTurbo>
            <ShouldCopyStimulus>!Exists('$(HotwireCopyBaseDirectory)\stimulus.js')</ShouldCopyStimulus>
        </PropertyGroup>

        <Message Text="Copying Hotwire files."                     Importance="high" Condition="$(ShouldCopyTurbo) Or $(ShouldCopyStimulus)" />
        <Message Text="  Turbo: $(HotwireTurboJsPath)"             Importance="high" Condition="$(ShouldCopyTurbo)" />
        <Message Text="  Stimulus: $(HotwireStimulusJsPath)"       Importance="high" Condition="$(ShouldCopyStimulus)" />
        <Message Text="  Destination: $(HotwireCopyBaseDirectory)" Importance="high" Condition="$(ShouldCopyTurbo) Or $(ShouldCopyStimulus)" />

        <Copy SourceFiles="$(HotwireTurboJsPath)"    DestinationFolder="$(HotwireCopyBaseDirectory)" Condition="$(ShouldCopyTurbo)" />
        <Copy SourceFiles="$(HotwireStimulusJsPath)" DestinationFolder="$(HotwireCopyBaseDirectory)" Condition="$(ShouldCopyStimulus)" />
    </Target>
</Project>
