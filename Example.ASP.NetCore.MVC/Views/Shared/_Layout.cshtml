<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta content="width=device-width, initial-scale=1.0" name="viewport" />
   <title>@ViewData["Title"] - mvdmio.Hotwire.NET</title>
   <base href="/" />

   <link asp-append-version="true" href="~/css/tailwind.output.css" rel="stylesheet" />
</head>
<body>
<div class="flex flex-col h-screen overflow-hidden w-screen">
   <header class="bg-blue-500 h-12 shrink-0 text-white w-full">
      <nav class="flex flex-row gap-4 h-full items-center justify-start px-4 w-full">
         <a asp-action="Index" asp-area="" asp-controller="Home" class="font-bold">mvdmio.Hotwire.NET</a>
         <a asp-action="Index" asp-area="" asp-controller="Home">Home</a>
      </nav>
   </header>

   <main class="grow p-4" role="main">
      @RenderBody()
   </main>

   <footer class="bg-blue-500 flex flex-col gap-1 items-center justify-center py-1 shrink-0 text-white w-full">
      <div>&copy; 2023 - Example.ASP.NetCore.MVC</div>
   </footer>
</div>
<script asp-append-version="true" src="~/js/lib/turbo.js" type="module"></script>
<script asp-append-version="true" src="~/js/lib/stimulus.js" type="module"></script>
<script asp-append-version="true" src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>